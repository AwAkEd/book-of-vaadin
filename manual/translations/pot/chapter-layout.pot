msgid "Bits.ALIGNMENT_LEFT"
msgstr ""

#. Tag: parameter
#: part1-layout.xml:1725
#, no-c-format
msgid "Bits.ALIGNMENT_HORIZONTAL_CENTER"
msgstr ""

#. Tag: parameter
#: part1-layout.xml:1728
